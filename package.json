    "@graphile/persisted-operations": "^0.1.0",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.1",
    "connect-pg-simple": "^6.2.1",
    "deep-email-validator": "https://github.com/mfbx9da4/deep-email-validator/tarball/1b744be60775139ec560c99443115f5e2e52b188",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "google-auth-library": "^7.0.4",
    "graphql": "^15.5.0",
    "node-pg-migrate": "^5.9.0",
    "peer": "^0.6.1",
    "peerjs": "^1.3.2",
    "pg": "^8.5.1",
    "postgraphile": "^4.11.0",
    "postgraphile-plugin-connection-filter": "^2.2.0",
    "sirv": "^1.0.11",
    "socket.io": "^3.1.2",
    "uid-generator": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
