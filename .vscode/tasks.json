{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-compose-db",
      "type": "shell",
      "isBackground": true,
      "command": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up everglot-db"
    },
    {
      "label": "test",
      "command": "docker-compose -f docker-compose.yml -f docker-compose.test.yml -p test run --rm everglot-app-test mispipe \"npm run test:watch\" \"npx roarr pretty-print --filter 'context.logLevel:>20'\"",
      "type": "shell",
      "group": "test",
      "isBackground": true
    },
    {
      "label": "test-unit",
      "command": "docker-compose -f docker-compose.yml -f docker-compose.test.yml -p test run --rm everglot-app-test mispipe \"npm run test:watch -- src/__tests__/unit\" \"npx roarr pretty-print --filter 'context.logLevel:>20'\"",
      "type": "shell",
      "group": "test",
      "isBackground": true
    },
    {
      "label": "test-functional",
      "command": "docker-compose -f docker-compose.yml -f docker-compose.test.yml -p test run --rm everglot-app-test mispipe \"npm run test:watch -- src/__tests__/functional\" \"npx roarr pretty-print --filter 'context.logLevel:>20'\"",
      "type": "shell",
      "group": "test",
      "isBackground": true
    },
    {
      "label": "build:css",
      "type": "npm",
      "script": "build:css"
    },
    {
      "label": "codegen",
      "type": "npm",
      "script": "codegen"
    },
    {
      "label": "migrate",
      "type": "process",
      "command": "npx dotenv npm run migrate up"
    }
  ]
}
