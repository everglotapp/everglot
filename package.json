{
  "name": "@everglot/everglot",
  "description": "Everglot web application",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p watch:*",
    "watch:css": "postcss src/assets/global.pcss -o static/global.css -w",
    "watch:dev": "sapper dev",
    "build": "run-s build:css build:sapper",
    "build:css": "NODE_ENV=production postcss src/assets/global.pcss -o static/global.css",
    "build:sapper": "sapper build --legacy",
    "build:export": "sapper export --legacy",
    "export": "run-s build:css build:export",
    "start": "node __sapper__/build",
    "serve": "serve ___sapper__/export",
    "validate": "svelte-check --ignore src/node_modules/@sapper --compiler-warnings 'module-script-reactive-declaration:ignore'"
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "compression": "^1.7.1",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "node-pg-migrate": "^5.9.0",
    "pg": "^8.5.1",
    "polka": "next",
    "sirv": "^1.0.11",
    "socketio": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/runtime": "^7.12.13",
    "@marcelovicentegc/i18n-iso-languages": "^0.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@rollup/plugin-url": "^5.0.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tsconfig/svelte": "^1.0.10",
    "@types/compression": "^1.7.0",
    "@types/node": "^14.14.28",
    "@types/polka": "^0.5.2",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.35",
    "autoprefixer": "^10.2.4",
    "clsx": "^1.1.1",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "postcss-load-config": "^3.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.6",
    "rollup": "^2.39.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.29.1",
    "stylelint": "^13.10.0",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.32.3",
    "svelte-check": "^1.1.35",
    "svelte-feather-icons": "^3.3.0",
    "svelte-preprocess": "^4.6.9",
    "svelte-select": "^3.17.0",
    "tailwindcss": "^2.0.3",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.3",
    "utf-8-validate": "^5.0.4"
  }
}
